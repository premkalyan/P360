{
  "name": "p360-backend",
  "version": "1.0.0",
  "description": "P360 Backend API Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_ENV=development node src/index.js",
    "build": "mkdir -p dist && cp src/index.js dist/index.js",
    "start": "node dist/index.js",
    "test": "CI=true jest src/index.test.ts",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/database/unit --verbose",
    "test:integration": "jest tests/database/integration --verbose",
    "test:e2e": "jest tests/database/e2e --verbose",
    "test:database": "jest tests/database --verbose",
    "test:coverage": "jest tests/database --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:seed": "npx tsx prisma/seed.ts",
    "db:reset": "npx prisma migrate reset --force",
    "db:studio": "npx prisma studio",
    "db:deploy": "npx prisma migrate deploy && npm run db:seed"
  },
  "dependencies": {
    "@prisma/client": "6.15.0",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.11.0",
    "prisma": "6.15.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.0",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
