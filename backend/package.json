{
  "name": "p360-backend",
  "version": "1.0.0",
  "description": "P360 Backend API Server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "NODE_ENV=development npx ts-node src/index.ts",
    "dev:old": "NODE_ENV=development node src/index.js",
    "build": "npx tsc && mkdir -p dist",
    "start": "node dist/index.js",
    "test": "NODE_ENV=test jest --passWithNoTests",
    "test:ci": "NODE_ENV=test jest --passWithNoTests --runInBand --forceExit --coverage",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:unit": "NODE_ENV=test jest src/__tests__/*.controller.test.ts --verbose",
    "test:integration": "NODE_ENV=test jest src/__tests__/*.integration.test.ts --verbose",
    "test:e2e": "NODE_ENV=test jest src/__tests__/*.e2e.test.ts --verbose --runInBand",
    "test:api": "NODE_ENV=test jest src/__tests__/*.api.test.ts --verbose --runInBand",
    "test:coverage": "NODE_ENV=test jest --coverage --collectCoverageFrom='src/**/*.ts' --coveragePathIgnorePatterns='src/__tests__/'",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:seed": "npx tsx prisma/seed.ts",
    "db:reset": "npx prisma migrate reset --force",
    "db:studio": "npx prisma studio",
    "db:deploy": "npx prisma migrate deploy && npm run db:seed"
  },
  "dependencies": {
    "@prisma/client": "6.15.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.0",
    "prisma": "6.15.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jest": "^29.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
