{
  "name": "p360-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install:all": "npm install --workspaces",
    "dev:frontend": "npm -w frontend run dev",
    "dev:backend": "npm -w backend run dev",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build:frontend": "npm -w frontend run build",
    "build:backend": "npm -w backend run build",
    "build": "npm run build:frontend && npm run build:backend",
    "lint:frontend": "npm -w frontend run lint",
    "lint:backend": "npm -w backend run lint",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "test:frontend": "npm -w frontend run test",
    "test:backend": "npm -w backend run test",
    "test:unit": "npm run test:frontend && npm run test:backend",
    "test:e2e": "playwright test tests/e2e/",
    "test:integration": "jest tests/integration/",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:p1": "npm run test:unit:p1 && npm run test:integration:p1 && npm run test:e2e:p1",
    "test:unit:p1": "jest --testPathPattern=\"(campaigns/CampaignCard|ui/Button|auth/AuthLayout).test.tsx\"",
    "test:integration:p1": "jest tests/integration/campaigns/CampaignsPage.test.tsx",
    "test:e2e:p1": "playwright test --config=playwright.dev.config.js --grep \"(TC-040|TC-041|TC-042|TC-061|TC-062)\"",
    "test:e2e:dev": "playwright test --config=playwright.dev.config.js",
    "dev:test-ports": "npm -w frontend run dev",
    "test:coverage": "npm run test:unit -- --coverage",
    "test:watch": "npm run test:frontend -- --watch",
    "docker:dev": "JWT_SECRET=dev-secret-key docker-compose -f docker-compose.yml -f docker-compose.dev.yml up -d",
    "docker:test": "JWT_SECRET=test-secret-key docker-compose -f docker-compose.yml -f docker-compose.test.yml up -d",
    "test:env:setup": "bash scripts/test-environment-setup.sh",
    "test:env:stop": "docker-compose -f docker-compose.yml -f docker-compose.test.yml down",
    "docker:prod": "docker-compose -f docker-compose.yml up -d",
    "docker:build": "docker-compose -f docker-compose.yml build",
    "docker:down": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml down",
    "docker:logs": "docker-compose logs -f",
    "kiwi:setup": "node tests/setup-kiwi-tcms.js",
    "kiwi:report": "node tests/report-to-kiwi.js",
    "ci:test": "npm run lint && npm run test:all && npm run docker:test",
    "ci:deploy": "npm run build && npm run docker:build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@playwright/test": "^1.40.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/jest-dom": "^6.4.6",
    "@testing-library/user-event": "^14.5.2",
    "axios": "^1.6.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
