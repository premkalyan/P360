# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/p360
DATABASE_URL_TEST=postgresql://user:password@localhost:5432/p360_test

# Authentication - Auth0
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_AUDIENCE=your-auth0-api-audience

# Authentication - Microsoft Entra ID
AZURE_AD_TENANT_ID=your-tenant-id
AZURE_AD_CLIENT_ID=your-client-id
AZURE_AD_CLIENT_SECRET=your-client-secret

# JWT Configuration
JWT_SECRET=your-very-secure-jwt-secret-key
JWT_EXPIRES_IN=24h

# API Configuration
API_BASE_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# External APIs
FIGMA_API_KEY=your-figma-api-key
FIGMA_FILE_KEY=your-figma-file-key
FIGMA_NODE_ID=861-20083

# Server Configuration
PORT=8000
NODE_ENV=development

# Redis (for caching)
REDIS_URL=redis://localhost:6379

# Email Service (SendGrid/SES)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@p360.com

# AWS Configuration (for future use)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=p360-assets

# Logging
LOG_LEVEL=info

# Development
DEBUG=p360:*
